    "baileys": "^7.0.0-rc.9",
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "node-cron": "^4.2.1",
    "pdfkit": "^0.16.0",
    "pino": "^9.14.0",
    "qrcode-terminal": "^0.12.0",
    "zod": "^3.25.57"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^22.14.0",
    "@types/node-cron": "^3.0.11",
    "@types/pdfkit": "^0.13.9",
    "@types/qrcode-terminal": "^0.12.2",
    "tsx": "^4.19.4",
