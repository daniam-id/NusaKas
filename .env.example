# NusaKas Environment Configuration
# Copy this file to .env and fill in your values

# Server Configuration
PORT=3000
NODE_ENV=development

# Supabase Configuration
# Get from: https://supabase.com/dashboard → Project Settings → API
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_ANON_KEY=your_anon_key_here
SUPABASE_SERVICE_KEY=your_service_role_key_here

# Google Gemini AI Configuration
# Get from: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# JWT Configuration
JWT_SECRET=your_jwt_secret_minimum_32_characters

# Frontend Configuration (Vite)
VITE_SUPABASE_URL=https://your-project-id.supabase.co
VITE_SUPABASE_ANON_KEY=your_anon_key_here

# API Endpoint Configuration (Development vs Production)
# Set to 'true' to use local development API (localhost:3000)
# Set to 'false' or leave empty to use production Cloudflare endpoint
VITE_USE_LOCAL_API=true

# Legacy configuration (for backward compatibility)
# Using Cloudflare production endpoint exclusively when VITE_USE_LOCAL_API=false
VITE_USE_CLOUDFLARE_API=false

# API Endpoints:
# LOCAL: http://localhost:3000/api (for local development)
# PRODUCTION: https://meant-serves-voting-catalog.trycloudflare.com/api (for deployed app)

# WhatsApp Session Path
WA_SESSION_PATH=.wa-session

# WhatsApp Bot Number (for OTP delivery)
# Format: Numbers only, without + or spaces (e.g., 6283188561866 for +62 831-8856-1866)
WHATSAPP_BOT_NUMBER=6283188561866
